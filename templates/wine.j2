{% extends "base.j2" %}
{% block title %}{{ title | title }}{% endblock %}
{% block content %}
<div id="results">
    {% for item in results %}
    <div class="result" data-result-id="1">
        <div class="details">
            <h2 class="property">{{item.variety}}</h2>
            <div id="description" class="property">{{item.description}}</div>
            <div id="points" class="property">Points: {{item.points}}</div>
            <div id="price" class="property">Price: {{item.price}}</div>
            <div id="winery" class="property">Winery: {{item.winery}}</div>
            <div id="country" class="property">
                <span>{{item.country}}</span>
                <span>,&nbsp;{{item.province}}</span>
                <div>
                {% for region in item.regions %}
                    <span>,&nbsp;{{region}}</span>
                {% endfor %}
                </div>
            </div>
            <hr>
            <form id="cart-form" class="property" action="/cart/add" method="POST">
                <input name="wine_id" type="hidden" value="{{item.id}}"/>
                <button class="btn btn-primary" type="submit">Add to Cart!</button>
            </form>
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}